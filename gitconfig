[user]
    email = sergey@lunyov.ru
    name = Sergey Lunev
[core]
    autocrlf = false
    safecrlf = true
    quotepath = false
    excludesfile = /Users/Sergey/.gitignore_global
    editor = /usr/bin/vim

[alias]
    s = status -s
    a = add
    c = commit -va
    u = reset HEAD
    b = branch
    bn = checkout -b
    co = checkout
    m = mergetool
    d = diff
    pl = pull --ff-only
    ps = push
    h = log --oneline --graph
    hl = log --graph --full-history --all --color --date=short --pretty=format:\"%Cred%x09%h %Creset%ad%Cblue%d %Creset %s %C(bold)(%an)%Creset\"

[color]
    ui     = true
    branch = auto
    diff   = auto
    status = auto
[push]
    default = current
[credential]
    helper = osxkeychain
[difftool "Kaleidoscope"]
    cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[diff]
    tool = Kaleidoscope
[difftool]
    prompt = false
[mergetool "Kaleidoscope"]
    cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
    trustExitCode = true
[mergetool]
    prompt = false
[merge]
    tool = Kaleidoscope
